
# main entry point
snippet main
int main(int argc, char * argv[]) {
	$0

	return 0;
}
endsnippet

# if condition
snippet if
if (${1:condition}) {
	$2
}$0
endsnippet

# switch condition
snippet switch
switch (${1:condition}) {
	$0
}
endsnippet

# foreach
snippet foreach
for (${2:const auto&} ${3:v}: ${1:object}) {
	$0
}
endsnippet

# include
snippet inc
#include ${1:source}$0
endsnippet

# Guard
snippet guard
#ifndef __${1:GUARD}__
#define __$1__

$0

#endif
endsnippet

